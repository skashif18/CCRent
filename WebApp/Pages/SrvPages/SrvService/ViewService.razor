@page "/services"
@using Blazorise
@using Syncfusion.Blazor.DropDowns
@using System.Collections.Specialized
@using System.Collections

@inject IToastService toastService
@inject NavigationManager NavigationManager
@inject IServiceRepository repository


<h3>Services</h3>
@if (Service != null){
<table class="table">
    <thead>
        <tr>
            <th>Name En</th>
            <th>Name Ar</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Service)
        {
            <tr>
                <td>@item.NameEn</td>
                <td>@item.NameAr</td>
                <td>@item.IsActive</td>
                <td><a class="pointer" @onclick="@(() => ViewSrv(item.Id))">View Detail</a></td>
            </tr>
        }
    </tbody>
</table>

<style>
    .approve{
        background-color:green;
        border-radius:7px;
        color:white;
    }

    .reject {
        background-color: red;
        border-radius: 7px;
        color:white;
    }
    .pointer{
        cursor:pointer;
    }

</style>
}


@code {
    IEnumerable<SrvService> Service = new List<SrvService>();
    protected override void OnInitialized()
    {
        base.OnInitialized();
        LoadService();
    }

    private void LoadService()
    {
        Service = repository.GetServiceAdmin();
    }

    public void RefState()
    {
        this.StateHasChanged();
    }

    private void ViewSrv(int srvId)
    {
        NavigationManager.NavigateTo($"/view-service-detail/{srvId}");
    }

}
